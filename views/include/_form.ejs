<!---- Form Handling ---->
<form action="/api/users" method="POST" id="add_user">
  <div class="new-user">
    <div class="form-group">
      <label for="name" class="text-light">Nome</label>
      <input type="hidden" name="id" value="" />
      <input type="text" name="name" value="" placeholder="Bilbo Baggins" />
    </div>
    <div class="form-group">
      <label for="e-mail" class="text-light">E-mail</label>
      <input
        type="text"
        name="e-mail"
        value=""
        placeholder="exemplo@gmail.com"
      />
    </div>
    <div class="form-group">
      <label for="gênero" class="text-light">Gênero</label>
      <div class="radio inline">
        <input type="radio" id="radio-1" name="gênero" value="Masculino" />
        <label for="radio-1" class="radio-label">Masculino</label>
      </div>
      <div class="radio inline">
        <input type="radio" id="radio-2" name="gênero" value="Feminino" />
        <label for="radio-2" class="radio-label">Feminino</label>
      </div>
    </div>

    <div class="form-group">
      <label for="gênero" class="text-light">Status</label>
      <div class="radio inline">
        <input type="radio" id="radio-3" name="status" value="Ativo" />
        <label for="radio-3" class="radio-label">Ativo</label>
      </div>
      <div class="radio inline">
        <input type="radio" id="radio-4" name="status" value="Inativo" />
        <label for="radio-4" class="radio-label">Inativo</label>
      </div>
    </div>

    <div class="form-group">
      <button type="submit" class="btn text-dark update">Salvar</button>
    </div>
  </div>
</form>
